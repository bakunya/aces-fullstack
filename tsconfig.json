{
	"compilerOptions": {
		"noUnusedLocals": true,
    	"noUnusedParameters": true,
		"baseUrl": "./",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"lib": [
			"ESNext"
		],
		"types": [
			"@cloudflare/workers-types/2023-07-01"
		],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"paths": {
			"@presenter/*": [
				"src/adapter/presenter/*"
			],
			"@src/*": [
				"src/*"
			]
		},
	},
	"exclude": [
		"node_modules",
		"src/adapter/presenter/ts/**/*"
	]
}